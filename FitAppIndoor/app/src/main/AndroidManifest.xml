<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.fhj.appathlon.fitapp.fitappindoor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".app.view.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".app.view.Statistics"
            android:label="Statistics"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".app.view.WeightLog"
            android:label="@string/lableWeightLog"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".app.view.Mail"
            android:label="Mail"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".app.view.AddActivityActivity"
            android:label="@string/title_activity_add_activity"
            android:theme="@style/AppTheme.NoActionBar"></activity>

    </application>

</manifest>